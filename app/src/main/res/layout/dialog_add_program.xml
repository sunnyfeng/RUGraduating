<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_add_program"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="400dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/_dialog_add_program_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"

        android:layout_marginTop="16dp"

        android:text="Add Major/Minor"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/_dialog_program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Program:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/_dialog_add_program_string" />

    <Spinner
        android:id="@+id/dialog_spin_course_add_program"
        android:layout_width="275dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/_dialog_program"
        app:layout_constraintStart_toEndOf="@+id/_dialog_program"
        app:layout_constraintTop_toTopOf="@+id/_dialog_program" />

    <Button
        android:id="@+id/dialog_cancel_add_program"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="CANCEL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/_dialog_program" />

    <Button
        android:id="@+id/dialog_ok_add_program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_cancel_add_program"
        app:layout_constraintStart_toEndOf="@+id/dialog_cancel_add_program"
        app:layout_constraintTop_toTopOf="@+id/dialog_cancel_add_program"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>